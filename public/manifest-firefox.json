{
  "manifest_version": 3,
  "name": "Notably",
  "version": "0.5.1",
  "description": "Browser extension for note taking on any website",
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "notably@pmfrancisco.dev",
      "strict_min_version": "109.0"
    }
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["*.js"],
      "matches": ["<all_urls>"]
    }
  ]
} 